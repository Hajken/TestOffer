@model TestOffer.ViewModels.ItemViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MetalItems)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.MetalItems)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MetalType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.File)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Add", "Add", new { id = item.ID })
            </td>
        </tr>
    }

</table>